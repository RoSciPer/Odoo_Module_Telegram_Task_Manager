<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Telegram Config Form -->
    <record id="view_telegram_config_form" model="ir.ui.view">
        <field name="name">telegram.config.form</field>
        <field name="model">telegram.config</field>
        <field name="arch" type="xml">
            <form string="Telegram Configuration">
                <header>
                    <button name="test_connection" type="object" string="ðŸ”§ Test Connection" class="btn-primary"/>
                    <button name="start_service" type="object" string="ðŸš€ Start Service" class="oe_highlight" invisible="not active"/>
                    <button name="stop_service" type="object" string="â›” Stop Service" class="btn-danger" invisible="not active"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="bot_token" password="True"/>
                            <field name="admin_telegram_id"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="bot_username" readonly="1"/>
                            <field name="bot_status" readonly="1"/>
                            <field name="last_error" readonly="1" invisible="not last_error"/>
                        </group>
                    </group>
                    
                    <div class="alert alert-info" role="alert">
                        <strong>ðŸ“‹ Setup Instructions:</strong><br/>
                        1. Create bot with @BotFather in Telegram<br/>
                        2. Get your Telegram ID (send /start to @userinfobot)<br/>
                        3. Enter Bot Token and Admin Telegram ID<br/>
                        4. Click "Test Connection" to verify<br/>
                        5. Click "Start Service" to begin receiving messages
                    </div>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Telegram Config List -->
    <record id="view_telegram_config_list" model="ir.ui.view">
        <field name="name">telegram.config.list</field>
        <field name="model">telegram.config</field>
        <field name="arch" type="xml">
            <list string="Telegram Configurations">
                <field name="name"/>
                <field name="bot_username"/>
                <field name="bot_status"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Action -->
    <record id="action_telegram_config" model="ir.actions.act_window">
        <field name="name">Telegram Configuration</field>
        <field name="res_model">telegram.config</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
