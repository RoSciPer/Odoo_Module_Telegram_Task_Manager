<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Task Assignment Wizard Form -->
    <record id="view_task_assign_wizard_form" model="ir.ui.view">
        <field name="name">task.assign.wizard.form</field>
        <field name="model">task.assign.wizard</field>
        <field name="arch" type="xml">
            <form string="Assign Tasks">
                <group>
                    <field name="task_ids" widget="many2many_tags" options="{'no_create': True}"/>
                    <field name="assigned_user_id" required="1"/>
                    <field name="telegram_user_id"/>
                    <field name="send_notification"/>
                </group>
                <group string="Custom Message" invisible="not send_notification">
                    <field name="message" placeholder="Optional custom message to include with notification..."/>
                </group>
                <footer>
                    <button name="action_assign_tasks" type="object" string="Assign Tasks" class="oe_highlight"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Task Assignment Wizard Action -->
    <record id="action_task_assign_wizard" model="ir.actions.act_window">
        <field name="name">Assign Tasks</field>
        <field name="res_model">task.assign.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Telegram Notification Wizard Form -->
    <record id="view_telegram_notify_wizard_form" model="ir.ui.view">
        <field name="name">telegram.notify.wizard.form</field>
        <field name="model">telegram.notify.wizard</field>
        <field name="arch" type="xml">
            <form string="Send Telegram Notification">
                <group>
                    <field name="send_to_all"/>
                    <field name="user_ids" widget="many2many_tags" options="{'no_create': True}" invisible="send_to_all"/>
                    <field name="notification_type"/>
                </group>
                <group string="Message">
                    <field name="message" nolabel="1" placeholder="Enter your message here..."/>
                </group>
                <footer>
                    <button name="action_send_notification" type="object" string="Send Notification" class="oe_highlight"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
