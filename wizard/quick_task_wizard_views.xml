<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Quick Task Wizard Form -->
    <record id="view_quick_task_wizard_form" model="ir.ui.view">
        <field name="name">quick.task.wizard.form</field>
        <field name="model">quick.task.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Quick Task">
                <group>
                    <group>
                        <field name="title" placeholder="Enter task title..."/>
                        <field name="task_type"/>
                        <field name="priority" widget="priority"/>
                        <field name="category_id"/>
                    </group>
                    <group>
                        <field name="assigned_user_id"/>
                        <field name="telegram_user_id"/>
                        <field name="vehicle_id"/>
                        <field name="date_deadline"/>
                        <field name="estimated_hours"/>
                    </group>
                </group>
                
                <group string="Description">
                    <field name="description" nolabel="1" placeholder="Enter task description..."/>
                </group>
                
                <group>
                    <field name="send_notification"/>
                </group>
                
                <footer>
                    <button name="action_create_task" type="object" string="Create Task" class="oe_highlight"/>
                    <button name="action_create_and_start" type="object" string="Create &amp; Start"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Quick Task Wizard Action -->
    <record id="action_quick_task_wizard" model="ir.actions.act_window">
        <field name="name">Create Quick Task</field>
        <field name="res_model">quick.task.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
